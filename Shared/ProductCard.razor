@using JPsShopz.Shared

<div class="card">
    <img src="@Product.ImageUrl" class="card-img-top" alt="@Product.Title">
    <div class="card-body">
        <h5 class="card-title">@Product.Title</h5>
        <p class="card-text">@Product.Description</p>
        <p class="card-text"><strong>@Product.Price.ToString("C")</strong></p>
        <button class="btn btn-primary" @onclick="BuyClicked">Buy</button>    
        @ChildContent 
    </div>
</div>

@code {
    [Parameter] public Product Product { get; set; }
    [Parameter] public EventCallback<Product> OnBuy { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; } 

    
    private async Task BuyClicked()
    {
        await OnBuy.InvokeAsync(Product);
    }

}
